@model Workers.Models_View.RegisterModel
@{
    ViewData["Title"] = "HolydaysView";
}
    <h2>Registration </h2>
    <form method="POST"  asp-controller="Account" asp-action="Register"asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div>
                <label asp-for="Email"> Email</label><br />
                <input type="text" asp-for="Email"class="form-control" style="width:13em;"/>
                <span asp-validation-for="Email" />
            </div>
            <div>
                <label asp-for="Password"> Password</label><br />
                <input asp-for="Password" class="form-control"style="width:13em;"/>
                <span asp-validation-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">Repeat password</label><br />
                <input asp-for="ConfirmPassword" class="form-control"style="width:13em;"/>
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <input type="submit" value="Register" />
            </div>
        </div>
    </form>